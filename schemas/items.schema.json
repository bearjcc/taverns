{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Items Configuration Schema",
  "description": "Schema for the items configuration file",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "displayName": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "icon": {
          "type": "string",
          "minLength": 1
        },
        "examineText": {
          "type": "string",
          "minLength": 1
        },
        "stackable": {
          "type": "boolean",
          "default": true
        },
        "maxStack": {
          "type": "number",
          "minimum": 1,
          "default": 999
        },
        "type": {
          "type": "string",
          "enum": ["resource", "tool", "weapon", "armor", "consumable", "quest", "misc"],
          "default": "misc"
        },
        "rarity": {
          "type": "string",
          "enum": ["common", "uncommon", "rare", "epic", "legendary"],
          "default": "common"
        },
        "value": {
          "type": "number",
          "minimum": 0,
          "default": 0
        }
      },
      "required": ["id", "name", "displayName", "description", "icon", "examineText"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
} 