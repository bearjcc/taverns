{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actions Configuration Schema",
  "description": "Schema for the actions configuration file",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "displayName": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "minLength": 1
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "displayName": {
                "type": "string",
                "minLength": 1
              },
              "description": {
                "type": "string",
                "minLength": 1
              },
              "icon": {
                "type": "string",
                "minLength": 1
              },
              "tooltip": {
                "type": "string",
                "minLength": 1
              },
              "levelRequired": {
                "type": "number",
                "minimum": 1
              },
              "xpReward": {
                "type": "number",
                "minimum": 0
              },
              "timeRequired": {
                "type": "number",
                "minimum": 0
              },
              "timeUnit": {
                "type": "string",
                "enum": ["seconds", "minutes", "hours"],
                "default": "hours"
              },
              "itemReward": {
                "type": "string",
                "minLength": 1
              },
              "itemCount": {
                "type": "number",
                "minimum": 1,
                "default": 1
              },
              "itemConsumption": {
                "type": "object",
                "patternProperties": {
                  "^[a-zA-Z0-9_-]+$": {
                    "type": "number",
                    "minimum": 1
                  }
                },
                "additionalProperties": false
              },
              "unlockMessage": {
                "type": "string",
                "minLength": 1
              },
              "flavorText": {
                "type": "string",
                "minLength": 1
              },
              "skillType": {
                "type": "string",
                "minLength": 1
              }
            },
            "required": ["name", "displayName", "description", "icon", "tooltip", "levelRequired", "xpReward", "timeRequired", "timeUnit", "itemReward", "itemCount", "itemConsumption", "unlockMessage", "flavorText", "skillType"],
            "additionalProperties": false
          },
          "minItems": 1
        }
      },
      "required": ["name", "displayName", "description", "actions"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
} 