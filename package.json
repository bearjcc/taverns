{
  "name": "taverns-and-treasures",
  "version": "1.0.0",
  "description": "A text-based RPG based around questing and skilling in a traditional fantasy setting",
  "main": "index.html",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "dev:legacy": "live-server --port=3000 --open=/",
    "build:legacy": "echo 'No build step required for static files'",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "analyze": "ANALYZE=true npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:e2e",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "jsdoc -c jsdoc.json --serve",
    "validate": "node scripts/validate-schemas.js",
    "validate:watch": "node scripts/validate-schemas.js --watch",
    "lint:legacy": "eslint assets/js/ src/lib/game-engine/ --ext .js",
    "lint:fix": "eslint assets/js/ src/lib/game-engine/ --ext .js --fix"
  },
  "keywords": [
    "rpg",
    "text-adventure",
    "fantasy",
    "questing",
    "skilling",
    "multiplayer",
    "free-to-play"
  ],
  "author": "bearjcc",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.522.0",
    "next": "15.3.4",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chokidar": "^3.5.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "eslint-plugin-jsdoc": "^48.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "src/lib/game-engine/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
