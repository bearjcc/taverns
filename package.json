{
  "name": "taverns-and-treasures",
  "version": "1.0.0",
  "description": "A text-based RPG based around questing and skilling in a traditional fantasy setting",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "echo 'No build step required for static files'",
    "deploy": "echo 'Deployment handled by GitHub Actions'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "jsdoc -c jsdoc.json --serve",
    "validate": "node scripts/validate-schemas.js",
    "validate:watch": "node scripts/validate-schemas.js --watch",
    "lint": "eslint assets/js/ engine/ --ext .js",
    "lint:fix": "eslint assets/js/ engine/ --ext .js --fix"
  },
  "keywords": [
    "rpg",
    "text-adventure",
    "fantasy",
    "questing",
    "skilling",
    "multiplayer",
    "free-to-play"
  ],
  "author": "bearjcc",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^48.2.1",
    "chokidar": "^3.5.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "engine/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
} 