{
  "name": "taverns-and-treasures",
  "version": "1.0.0",
  "description": "A text-based RPG based around questing and skilling in a traditional fantasy setting",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "echo 'No build step required for static files'",
    "deploy": "echo 'Deployment handled by GitHub Actions'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm test && npm run test:e2e",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "jsdoc -c jsdoc.json --serve",
    "validate": "node scripts/validate-schemas.js",
    "validate:watch": "node scripts/validate-schemas.js --watch",
    "lint": "eslint assets/js/ engine/ --ext .js",
    "lint:fix": "eslint assets/js/ engine/ --ext .js --fix"
  },
  "keywords": [
    "rpg",
    "text-adventure",
    "fantasy",
    "questing",
    "skilling",
    "multiplayer",
    "free-to-play"
  ],
  "author": "bearjcc",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^48.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "live-server": "^1.2.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/js/**/*.js",
      "engine/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
