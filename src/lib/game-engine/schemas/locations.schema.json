{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Location Data Schema",
  "description": "Schema for validating location data with hierarchical structure",
  "type": "object",
  "patternProperties": {
    "^[a-z_]+$": {
      "$ref": "#/definitions/globe"
    }
  },
  "definitions": {
    "globe": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "continents": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "$ref": "#/definitions/continent"
            }
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "continent": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "countries": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "$ref": "#/definitions/country"
            }
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "country": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "regions": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "$ref": "#/definitions/region"
            }
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "region": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "spots": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "$ref": "#/definitions/spot"
            }
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "spot": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "description": {
          "type": "string"
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "connections": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/connection"
          }
        },
        "requirements": {
          "$ref": "#/definitions/requirements"
        },
        "travelCost": {
          "$ref": "#/definitions/travelCost"
        }
      },
      "required": ["name", "description", "actions"],
      "additionalProperties": false
    },
    "connection": {
      "type": "object",
      "properties": {
        "spotId": {
          "type": "string",
          "pattern": "^[a-z_]+$"
        },
        "travelTime": {
          "type": "number",
          "minimum": 0
        },
        "description": {
          "type": "string"
        },
        "requirements": {
          "$ref": "#/definitions/requirements"
        },
        "travelCost": {
          "$ref": "#/definitions/travelCost"
        }
      },
      "required": ["spotId"],
      "additionalProperties": false
    },
    "requirements": {
      "type": "object",
      "properties": {
        "skills": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      },
      "additionalProperties": false
    },
    "travelCost": {
      "type": "object",
      "properties": {
        "items": {
          "type": "object",
          "patternProperties": {
            "^[a-z_]+$": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      },
      "additionalProperties": false
    }
  }
} 