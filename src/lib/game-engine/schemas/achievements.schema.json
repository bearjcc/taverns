{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Achievements Schema",
  "description": "Schema for game achievements configuration",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the achievement"
        },
        "name": {
          "type": "string",
          "description": "Display name of the achievement"
        },
        "description": {
          "type": "string",
          "description": "Description of how to unlock the achievement"
        },
        "category": {
          "type": "string",
          "enum": ["progression", "skills", "collection", "trading", "consumption", "magic", "cooking", "secrets", "crafting", "exploration"],
          "description": "Category of the achievement"
        },
        "icon": {
          "type": "string",
          "description": "Emoji or icon for the achievement"
        },
        "points": {
          "type": "integer",
          "minimum": 0,
          "description": "Points awarded for unlocking this achievement"
        },
        "secret": {
          "type": "boolean",
          "description": "Whether this is a secret achievement"
        },
        "requirements": {
          "type": "object",
          "description": "Requirements to unlock this achievement",
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "skillLevel": {
                  "type": "object",
                  "patternProperties": {
                    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                      "type": "integer",
                      "minimum": 1
                    }
                  },
                  "additionalProperties": false
                }
              },
              "required": ["skillLevel"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "anySkillLevel": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": ["anySkillLevel"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "multipleSkillLevels": {
                  "type": "object",
                  "properties": {
                    "count": {
                      "type": "integer",
                      "minimum": 1
                    },
                    "level": {
                      "type": "integer",
                      "minimum": 1
                    }
                  },
                  "required": ["count", "level"],
                  "additionalProperties": false
                }
              },
              "required": ["multipleSkillLevels"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "uniqueItems": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": ["uniqueItems"],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "custom": {
                  "type": "string"
                },
                "locationCount": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": ["custom"],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": ["id", "name", "description", "category", "icon", "points", "secret", "requirements"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
} 